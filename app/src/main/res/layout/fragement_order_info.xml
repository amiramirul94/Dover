<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/store_image_view"
                android:background="@drawable/usericon"
                android:layout_weight="0.04"
                android:layout_margin="@dimen/image_view_margin"/>

            <TextView
                android:id="@+id/store_name_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/runner_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/usericon"
                android:layout_margin="@dimen/image_view_margin"/>
            <TextView
                android:id="@+id/runner_name_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runner Name"/>
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="@dimen/padding_top"
        android:gravity=""
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dispatching"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 FEB 2017 11:11:11"
                android:layout_margin="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runner"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/runner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Zafran"
                android:layout_margin="8dp"
                android:textSize="18sp"/>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/view_items_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View items"/>
                <Button
                    android:id="@+id/view_map_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View on map"/>

            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>


</LinearLayout>