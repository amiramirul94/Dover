<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:layout_margin="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/box_container_background_normal">

        <ImageView
            android:src="@drawable/restaurant"
            android:background="@color/white"
            android:id="@+id/menu_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:layout_toRightOf="@id/menu_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nasi Goreng"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/menu_name_text_view"/>
        <TextView
            android:id="@+id/price_text_view"
            android:layout_toRightOf="@id/menu_image_view"
            android:layout_below="@id/menu_name_text_view"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            tools:text="RM2.00"
            android:layout_height="wrap_content"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/availability_switch"
            android:layout_alignBottom="@+id/menu_image_view"
            android:layout_alignLeft="@+id/price_text_view"
            android:layout_alignStart="@+id/price_text_view"/>
        <TextView
            android:id="@+id/availability_text_view"
            android:layout_toRightOf="@id/availability_switch"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@id/availability_switch"
            android:layout_width="wrap_content"
            android:padding="5dp"
            tools:text="Available"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>