<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="3dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_container_background_normal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:src="@drawable/restaurant"/>


        <LinearLayout
            android:layout_toRightOf="@id/item_image_view"
            android:layout_toEndOf="@id/item_image_view"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Steak, Chicken Chop and 1 other from Mak Ngah"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAllCaps="false"/>

            <TextView

                android:id="@+id/status_text_view"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Received"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                tools:text="28 Feb 2016"/>


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
