<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/box_container_background_normal"
        >
        <ImageView
            android:src="@drawable/usericon"
            android:background="@color/white"
            android:id="@+id/customer_profile_picture_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

            <TextView
                android:id="@+id/customer_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_toRightOf="@id/customer_profile_picture_image_view"
                android:layout_toEndOf="@id/customer_profile_picture_image_view"
                tools:text="No.2 Jln PI 15/6"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/store_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_below="@id/customer_name_text_view"
                android:layout_toRightOf="@id/customer_profile_picture_image_view"
                android:layout_toEndOf="@id/customer_profile_picture_image_view"
                tools:text="Mak Ngah Catering"
                android:textSize="17sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ready for pickup"
                android:textSize="17sp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_toRightOf="@id/customer_profile_picture_image_view"
                android:layout_below="@id/store_name_text_view"
                android:layout_toEndOf="@id/customer_profile_picture_image_view"
                android:layout_marginTop="5dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>