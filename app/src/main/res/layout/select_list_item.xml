<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_margin="4dp"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:id="@+id/container_food_list_linear_layout"
            android:background="@drawable/box_container_background_normal"
            android:padding="5dp">
            
            <ImageView
                android:id="@+id/item_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/steak"
                android:background="@drawable/corner_radius"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/item_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Sirloin Steak"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    tools:text="44.50"
                   />

                <TextView
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:text="available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/availability_text_view"
                    android:layout_weight="2"/>


            </LinearLayout>






        </LinearLayout>

</android.support.v7.widget.CardView>